<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <h1>Blog Posts</h1>

    <% posts.forEach(post => { %>
        <div>
            <h2><a href="/post/<%= post.id %>"><%= post.title %></a></h2>
            <p><%= post.content.substring(0, 100) %>...</p>
        </div>
    <% }); %>

    <a href="/admin/create">Create New Post (Admin)</a>
</body>
</html>
